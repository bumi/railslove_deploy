<VirtualHost <%= domain %>:80>
	ServerName <%= domain %>
	ServerAlias <%= domain_alias %>
	DocumentRoot /var/www/apps/<%= domain %>/current/public

	<directory "/var/www/apps/<%= domain %>/current/public">
		Order allow,deny
		Allow from all
	</directory>
	
	LogLevel warn
  ErrorLog /var/www/apps/<%= domain %>/logs/error.log
  CustomLog /var/www/apps/<%= domain %>/logs/access.log combined
</VirtualHost>
